.ui.container
  .ui.large.secondary.inverted.pointing.menu
    %a.toc.item
      %i.sidebar.icon
    .item
      .ui.logo.shape
        .sides
          .active.ui.side
            = image_tag "/assets/cabinbot-logo-small.png", :class=>"ui image", :height=>"30px"
          %strong
            Cabinbot
    -if user_signed_in?
      -if current_user.try(:admin?)
        = link_to 'Users', users_path, :class=>"item"
    .right.item
      -if user_signed_in?
        = link_to 'Sign out', signout_path, :class=>"ui.inverted.button"
      -else
        = link_to 'Sign in', signin_path, :class=>"ui.inverted.button"