.col-md-6
  .panel.panel-default.panel-profile.m-b-md.user-panel
    .panel-heading.user-panel-blur{:style => "background-image: url(#{user.image_url}); background-color: ##{user.color}"}
    .panel-body.text-center
      =link_to user do
        = image_tag user.image_url, :class=>"panel-profile-img"
        = image_tag user.logo, :class=>"panel-profile-img img-thumbnail"
      %h5.panel-title
        =link_to user, :class=>"text-inherit" do
          = user.full_name
          %small
            = user.name
      %p.m-b-md{:style=>"height:22px"}
        - unless user.company_name.blank?
          = user.company_name
          |
        - unless user.site.blank?
          = user.site
        - unless user.twitter_handle.blank?
          %span.icon.icon-twitter
          = user.twitter_handle

      %ul.panel-menu
        %li.panel-menu-item
          %a.text-inherit
            = user.answered_questions.count
            questions answered
        %li.panel-menu-item
          %a.text-inherit
            = user.channels.count
            channels joined
        %li.panel-menu-item
          %a.text-inherit
            =user.score
            days present
            
      / %a.btn.btn-success{:href => "#"}
      /   Contact
      /   = user.name
      = link_to "Learn more", user, :class=>"btn btn-primary"