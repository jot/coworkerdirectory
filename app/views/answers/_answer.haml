.panel.panel-default
  .panel-heading{:style => "background-image: url(#{answer.background_image}); background-color: ##{answer.color}"}
    .panel-title
      =link_to answer, :class=>"text-inherit" do
        =answer.question_text
  .panel-body.text-center
    %p.m-b-md{:style=>"font-size:2em;"}
      -if user_signed_in? && current_user.team_uid == current_team.uid
        - if answer.url.present?
          = link_to answer.url, answer.url, :class=>"embedly-card"
        = raw auto_link(answer.unescaped_answer)
      -else
        = link_to "Sign in to #{current_team.name} to view", main_app.signin_url(:subdomain=>"", :team=>current_team.uid)


